<Window x:Class="CursovaRobota.Views.WindowInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">
    <!-- Корінь з прозорим фоном -->
    <Border Background="White"
            MouseLeftButtonDown="Border_MouseLeftButtonDown"
            CornerRadius="8"
            BorderThickness="1"
            BorderBrush="#3F7DF8"
            Padding="14">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10"
                               ShadowDepth="0"
                               Opacity="0.25"/>
        </Border.Effect>

        <!-- Вертикальна розмітка: підказка, назва, опис, кнопки -->
        <StackPanel Orientation="Vertical" Width="300">

            <!-- Загальний Prompt -->
            <TextBlock x:Name="TxtPrompt"
                       TextWrapping="Wrap"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Foreground="#222"/>

            <!-- Поле для назви події -->
            <TextBlock Text="Назва події" Margin="0,12,0,2" FontWeight="SemiBold"/>
            <TextBox x:Name="TitleBox" Height="28" />

            <!-- Поле для опису події -->
            <TextBlock Text="Опис події" Margin="0,12,0,2" FontWeight="SemiBold"/>
            <TextBox x:Name="DescriptionBox"
                     Height="80"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"/>

            <!-- Кнопки -->
            <Button Content="OK"
                    Margin="0,12,0,0"
                    Padding="6"
                    Background="#3F7DF8"
                    Foreground="White"
                    BorderThickness="0"
                    Width="80"
                    HorizontalAlignment="Center"
                    Click="Ok_Click"/>
            <Button Content="Скасувати"
                    Margin="0,8,0,0"
                    Padding="6"
                    Background="#EEF3FF"
                    Foreground="Black"
                    BorderThickness="0"
                    Width="100"
                    HorizontalAlignment="Center"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Border>
</Window>