<Application x:Class="CursovaRobota.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:CursovaRobota.Helpers"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/HolidayAnimations.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- конвертери тепер знайдені -->
            <helpers:BoolToVisibilityConverter x:Key="BoolToVis"/>
            <helpers:BoolToBrushConverter      x:Key="BoolToBrush"/>

            <SolidColorBrush x:Key="TodayBrush"   Color="#FFCCE5FF"/>
            <SolidColorBrush x:Key="DefaultBrush" Color="Transparent"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
